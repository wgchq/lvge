<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:state_checked="true">
        <shape>
            <solid android:color="#b3ecbc"/>
            <corners android:radius="99dp"/>
        </shape>
    </item>

    <item android:state_enabled="false" android:state_checked="false">
        <shape>
            <solid android:color="#FE57FE"/>
            <corners android:radius="99dp"/>
            <stroke
                android:width="1.5dp"
                android:color="#FEFEFE"/>
        </shape>
    </item>

	<item android:state_checked="true">
		<shape>
			<solid android:color="#F0F0F0"/>
			<corners android:radius="99dp"/>
			<stroke
				android:width="1.5dp"
				android:color="#FE57F0"/>   <!--打开边界-->
		</shape>
	</item>

	<item>
		<shape>
			<solid android:color="#F0F0F0"/>  <!--关闭中间-->
			<corners android:radius="99dp"/>
			<stroke
				android:width="1.5dp"
				android:color="#F0F0F0"/>  <!--关闭中间边框-->
		</shape>
	</item>
</selector>