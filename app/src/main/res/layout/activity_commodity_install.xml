<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lvge.com.myapp.modules.commodity_management.CommodityInstall"
    tools:ignore="GradleDependency"
    android:background="@color/line_background_gray"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/commodity_newgoods_toolsbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints,ObsoleteLayoutParam,RtlHardcoded,UselessParent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:onClick="Commodity_return"
            android:src="@mipmap/menu_return"
            tools:ignore="ContentDescription" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/appCompatTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:gravity="center_horizontal"
            android:text="安装"
            android:textSize="@dimen/main_title"
            tools:ignore="HardcodedText,SpUsage"
            tools:igone="ContentDescription" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/edit_text_shape"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="不支持门店安装"
            android:id="@+id/commodity_install_textview1"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlHardcoded" />


        <EditText
            android:id="@+id/commodity_install_commodityname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/commodity_install_textview1"
            android:layout_toLeftOf="@+id/commodity_install_imagebutton"
            android:background="@drawable/edit_text_shape"
            android:layout_centerVertical="true"
            android:hint="产品不需要安装"
            android:inputType="text"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <ImageButton
            android:id="@+id/commodity_install_imagebutton"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/right"
            tools:ignore="ContentDescription,RtlHardcoded" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/line_background_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/edit_text_shape"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="支持门店安装   "
            android:id="@+id/commodity_install_textview2"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlHardcoded" />


        <EditText
            android:id="@+id/commodity_install_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/commodity_install_textview2"
            android:layout_toLeftOf="@+id/commodity_install_imagebutton2"
            android:background="@drawable/edit_text_shape"
            android:layout_centerVertical="true"
            android:hint="产品需要安装"
            android:inputType="text"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <ImageButton
            android:id="@+id/commodity_install_imagebutton2"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            tools:ignore="ContentDescription,RtlHardcoded" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/line_background_gray" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/line_background_gray"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/text_left_padding"
        android:drawablePadding="@dimen/text_left_to_img_padding"
        android:text="类型说明"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_left_padding"
        android:text="不支持门店安装：买家下单后，卖家需要选择物流公司并安排发货，邮寄给用户。"
        tools:ignore="HardcodedText" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/line_background_gray" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_left_padding"
        android:text="支持门店安装：买家下单后，卖家需要选择物流公司并安排发货到安装门店，客户直接去安装门店安装即可，产品需要支付给安装门店安装费用。"
        tools:ignore="HardcodedText" />
</LinearLayout>
