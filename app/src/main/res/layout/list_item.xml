<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<!-- 这个TextView就是显示字母的 -->
    <TextView
        android:id="@+id/tv_lv_item_tag"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="#e6e6e6"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x10"
        android:text="Z"
        android:visibility="visible"
        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/mainBackgroundColor"
        android:orientation="vertical"
        android:layout_height="@dimen/x80" >
        <View 
            android:id="@+id/view_lv_item_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="#174465"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            tools:ignore="RtlHardcoded" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"
            tools:ignore="UselessParent">

            <ImageView
                android:id="@+id/iv_lv_item_head"
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/x50"
                android:layout_centerVertical="true"
                android:src="@mipmap/commodity_newgoods_addimage"
                android:layout_marginLeft="@dimen/x15"
                tools:ignore="ContentDescription,RtlHardcoded" />

            <TextView
                android:id="@+id/tv_lv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_lv_item_head"
                android:layout_marginLeft="@dimen/x15"
                android:text="周华健"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <ImageView
                android:id="@+id/commodity_newgoods_commodity_type_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x30"
                android:checked="true"
                android:layout_centerVertical="true"
                tools:ignore="ContentDescription,RtlHardcoded" />
        </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>