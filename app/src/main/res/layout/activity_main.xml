<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackgroundColor"
    android:orientation="vertical"
    tools:context="lvge.com.myapp.MainActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:text="员工登陆"
        android:textColor="#FF575C"
        android:textSize="@dimen/x36"
        tools:ignore="HardcodedText,PxUsage,RtlHardcoded" />

    <ImageView
        android:id="@+id/login_imageView"
        android:layout_width="@dimen/x160"
        android:layout_height="@dimen/x160"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x80"
        android:adjustViewBounds="true"
        android:background="@mipmap/lg_user_background"
        android:cropToPadding="true"
        android:padding="@dimen/x26"
        android:scaleType="fitCenter"
        android:src="@mipmap/lg_user"
        tools:ignore="ContentDescription" />

    <EditText
        android:id="@+id/username"
        android:layout_width="@dimen/x666"
        android:layout_height="@dimen/x110"
        android:layout_below="@+id/login_imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/x16"
        android:layout_marginTop="@dimen/x32"
        android:ems="10"
        android:background="@drawable/lg_edit_view_shape"
        android:hint="@string/login_username"
        android:inputType="text"

        android:selectAllOnFocus="false"
        android:textColor="#333333"
        android:textColorHint="#C3C3C3"
        android:textSize="@dimen/x36"
        tools:ignore="HardcodedText"
        android:maxLines="1" />

    <EditText
        android:id="@+id/password"
        android:layout_width="@dimen/x666"
        android:layout_height="@dimen/x110"
        android:background="@drawable/lg_edit_view_shape"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/x16"
        android:drawableRight="@mipmap/lg_eye"
        android:ems="10"
        android:hint="@string/login_password"
        android:inputType="textPassword"
        android:textColor="#333333"
        android:textColorHint="#C3C3C3"
        android:textSize="@dimen/x36"
        tools:ignore="RtlHardcoded" />


    <LinearLayout
        android:id="@+id/lly_login_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="RtlHardcoded">

            <TextView
                android:id="@+id/lg_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x52"
                android:layout_marginTop="@dimen/x28"
                android:text="@string/forget_password"
                android:textColor="#707070"
                android:textSize="@dimen/x30"
                tools:ignore="PxUsage,RelativeOverlap" />

            <TextView
                android:id="@+id/lg_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x52"
                android:layout_marginTop="@dimen/x28"
                android:text="注册"
                android:textColor="#707070"
                android:textSize="@dimen/x30"
                tools:ignore="HardcodedText,PxUsage" />
        </RelativeLayout>

        <TextView
            android:id="@+id/lg_return_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fd0101"
            android:textSize="@dimen/x18"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/login_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x88"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x20"
            android:background="@drawable/lg_main_button_background"
            android:gravity="center"
            android:text="@string/login_submit"
            android:textColor="#7D7D7D"
            android:textSize="@dimen/x36" />

    </LinearLayout>


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/x12"
        android:drawableTop="@mipmap/lg_company_logo"
        android:gravity="center"
        android:text="@string/company_name"
        android:textColor="#383838"
        android:textSize="@dimen/x28" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/x34"
        android:layout_marginTop="@dimen/x12"
        android:text="Henan passenger pigeon technology"
        android:textColor="#383838"
        android:textSize="@dimen/x18"
        tools:ignore="HardcodedText,ObsoleteLayoutParam" />
</RelativeLayout>
