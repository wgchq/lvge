<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:background="@color/line_background_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30"
        android:layout_height="@dimen/x80"
        tools:ignore="InefficientWeight">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:background="@drawable/edit_text_shape"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/commodity_newgoods_textview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x15"
                    android:text="1"
                    android:textSize="@dimen/x30"
                    tools:ignore="HardcodedText,RtlHardcoded" />

                <EditText
                    android:id="@+id/commodity_newgoods_commoditySellingprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/commodity_newgoods_textview2"
                    android:background="@drawable/edit_text_shape"
                    android:hint="请输入问题标题"
                    android:inputType="text"
                    android:paddingLeft="@dimen/x50"
                    android:textSize="@dimen/x28"
                    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/commodity_common_delete"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_gravity="top|right"
                android:background="@drawable/shape_unread_message_bg"
                android:gravity="center"
                android:src="@mipmap/delete"
                android:textColor="@color/mainFontColor"
                android:textSize="@dimen/x28"
                tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30"
        android:layout_height="wrap_content"
        tools:ignore="InefficientWeight">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_shape"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/commodity_newgoods_textview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x15"
            android:text="解答"
            android:textSize="@dimen/x30"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <EditText
            android:id="@+id/commodity_newgoods_commodityquestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/commodity_newgoods_textview3"
            android:background="@drawable/edit_text_shape"
            android:hint="请输入解答描述"
            android:inputType="textMultiLine"
            android:paddingLeft="@dimen/x50"
            android:textSize="@dimen/x28"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

    </RelativeLayout>
        </LinearLayout>

</LinearLayout>