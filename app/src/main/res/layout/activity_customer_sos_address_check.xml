<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lvge.com.myapp.modules.customer_management.CustomerSosAddressCheckActivity">

    <com.amap.api.maps2d.MapView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.amap.api.maps2d.MapView>
    <!--右上角组件-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x34"
            android:layout_marginTop="@dimen/x158"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_client_manage_switch_map_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/client_manage_switch_map_view" />

            <ImageView
                android:id="@+id/img_client_manage_acc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x16"
                android:src="@mipmap/client_manage_acc_on" />

            <ImageView
                android:id="@+id/img_client_manage_acc_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x16"
                android:src="@mipmap/client_manage_acc_power_on" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x16">

                <ImageView
                    android:id="@+id/img_client_manage_battery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/client_manage_battery_on" />

                <TextView
                    android:id="@+id/txt_client_manage_battery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginTop="@dimen/x35"
                    android:text="12V"
                    android:textSize="@dimen/x12" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x16">

                <ImageView
                    android:id="@+id/img_client_manage_gps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/client_manage_gps_on" />

                <TextView
                    android:id="@+id/txt_client_manage_gps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginTop="@dimen/x35"
                    android:text="12"
                    android:textSize="@dimen/x12" />

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <!--左上方-->


    <ImageView
        android:id="@+id/back_client_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/x52"
        android:src="@mipmap/ic_back_red" />

    <TextView
        android:id="@+id/client_kilometer_map"
        android:layout_width="@dimen/x118"
        android:layout_height="@dimen/x118"
        android:layout_marginLeft="@dimen/x25"
        android:layout_marginTop="@dimen/x168"
        android:background="@drawable/cycle_for_client_map_shape"
        android:gravity="center"
        android:text="40km"
        android:textColor="#00b6f9"
        android:textSize="@dimen/x40" />

    <!--左下方-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|left">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x128">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x100"
                android:layout_marginLeft="@dimen/x18"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_client_manage_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/client_manage_person_big"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/img_client_manage_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x50"
                    android:src="@mipmap/client_manage_location_off" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x50"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_client_manage_person_and_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/client_manage_person_and_car"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/client_manage_car_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x25"
                    android:src="@mipmap/client_manage_car_big"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!--下方-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x128"
            android:background="@drawable/client_detail_map_address_shape"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/x18"
            android:paddingTop="@dimen/x28">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/client_manage_person_small" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x30"
                        android:src="@mipmap/client_manage_car_samll" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x20"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/client_detail_user_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="地址"
                        android:textColor="#888"
                        android:textSize="@dimen/x24" />

                    <TextView
                        android:id="@+id/client_detail_client_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x26"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="地址"
                        android:textColor="#888"
                        android:textSize="@dimen/x24" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/client_and_user_distinct"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginLeft="@dimen/x20"
                android:gravity="bottom"
                android:text="2228米"
                android:textColor="#ffaa58"
                android:textSize="@dimen/x40" />

        </LinearLayout>

    </LinearLayout>

    <!--右下-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|right">

        <ImageView
            android:id="@+id/img_client_manage_rescue"
            android:layout_width="wrap_content"
            android:onClick="show"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x80"
            android:layout_marginRight="@dimen/x20"
            android:visibility="gone"
            android:src="@mipmap/client_manage_rescue" />
    </LinearLayout>

</FrameLayout>
