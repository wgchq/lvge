<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/x712"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_from_bottom_shape"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/sex_women"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x100"
            android:gravity="center"
            android:text="温馨提示"
            android:textColor="@color/text_color"
            android:textSize="@dimen/x32"
            tools:ignore="HardcodedText" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d2d3d6" />

        <TextView
            android:id="@+id/sex_man"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x230"
            android:gravity="center"
            android:text="是否放弃对资料的修改？"
            android:textColor="@color/text_color"
            android:textSize="@dimen/x32"
            tools:ignore="HardcodedText" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/choose_dialog_abadan"
                android:layout_height="wrap_content"
                android:text="放弃"
                android:textColor="@color/mainBackgroundColor"
                android:background="@color/colorPrimary"
                tools:ignore="ButtonStyle,HardcodedText" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/choose_dialog_continue"
                android:layout_height="wrap_content"
                android:textColor="@color/mainBackgroundColor"
                android:background="@color/colorPrimary"
                android:text="继续编辑"
                tools:ignore="ButtonStyle,HardcodedText" />

            <!-- <TextView
                 android:id="@+id/sex_cancel"
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/x100"
                 android:gravity="center"
                 android:text="@string/cancel"
                 android:textColor="@color/colorPrimary"
                 android:textSize="@dimen/x32" />-->
        </LinearLayout>
    </LinearLayout>




</LinearLayout>
