<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/toolbar_main_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:onClick="toggleMenu"
                android:src="@mipmap/menu_logo"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/main_page_content_shop_order"
                style="@style/system_title_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/company_name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:onClick="toggleMenu"
                android:src="@mipmap/main_page_message"
                tools:ignore="ContentDescription" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/navigation"
        android:layout_below="@+id/toolbar_main_page"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            tools:ignore="UselessParent">

            <EditText
                style="@style/system_hint_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_shape"
                android:hint="@string/please_enter_validation"
                android:inputType="text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/activity_horizontal_margin">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_validation_type_scan_QR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/main_page_validation_type_scan_qr"
                        android:drawablePadding="@dimen/text_left_to_img_padding"
                        android:gravity="center"
                        android:text="@string/validation_type_scan_QR"
                        android:textColor="@color/mainFontColor"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>


                <View
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/mainBackgroundColor" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_validation_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/main_page_validation_history"
                        android:drawablePadding="@dimen/text_left_to_img_padding"
                        android:gravity="center"
                        android:text="@string/validation_history"
                        android:textColor="@color/mainFontColor"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#EFEFF4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_refund_after_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/main_page_refund_after_sale"
                    android:drawablePadding="@dimen/text_left_to_img_padding"
                    android:gravity="center"

                    android:text="@string/refund_after_sale"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_pending_send_goods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/main_page_pending_send_goods"
                    android:drawablePadding="@dimen/text_left_to_img_padding"
                    android:gravity="center"

                    android:text="@string/pending_send_goods"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#EFEFF4" />

        <ScrollView
            android:id="@+id/main_page_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:gravity="center"

                    android:padding="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:id="@+id/img_main_page_shop_management"
                        android:layout_weight="1"

                        android:contentDescription="@string/shop_management"
                        android:src="@mipmap/main_page_shop_management" />

                    <ImageView
                        android:id="@+id/img_main_page_commodity_management"
                        android:layout_weight="1"
                        android:contentDescription="@string/commodity_management"
                        android:src="@mipmap/main_page_commodity_management" />

                    <ImageView
                        android:id="@+id/img_main_page_financial_management"
                        android:layout_weight="1"
                        android:contentDescription="@string/financial_management"
                        android:src="@mipmap/main_page_financial_management" />


                </TableRow>

                <TableRow
                    android:gravity="center"
                    android:padding="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:id="@+id/img_main_page_car_data_management"
                        android:layout_weight="1"
                        android:contentDescription="@string/car_data_management"
                        android:src="@mipmap/main_page_car_data_management" />

                    <ImageView
                        android:id="@+id/img_main_page_royalty_management"
                        android:layout_weight="1"
                        android:contentDescription="@string/royalty_management"
                        android:src="@mipmap/main_page_royalty_management" />

                    <ImageView
                        android:id="@+id/img_main_page_evaluation_management"
                        android:layout_weight="1"
                        android:contentDescription="@string/evaluation_management"
                        android:src="@mipmap/main_page_evaluation_management" />
                </TableRow>

                <TableRow
                    android:gravity="center"
                    android:padding="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:id="@+id/img_main_page_my_4s_management"
                        android:layout_weight="1"
                        android:contentDescription="@string/my_4s_management"
                        android:src="@mipmap/main_page_my_4s_management" />

                    <ImageView
                        android:id="@+id/img_main_page_coupon"
                        android:layout_weight="1"
                        android:contentDescription="@string/coupon"
                        android:src="@mipmap/main_page_coupon" />

                    <ImageView
                        android:id="@+id/main_page_other1"
                        android:layout_weight="1"
                        tools:ignore="ContentDescription" />

                </TableRow>
            </TableLayout>
        </ScrollView>


    </LinearLayout>

</RelativeLayout>
