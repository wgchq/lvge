<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:background="@android:color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_gray"
        android:layout_marginBottom="@dimen/x10"
        android:gravity="center">

        <ImageView
            android:id="@+id/key_board_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/x26"
            android:src="@mipmap/keyboarddown" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/x15"
        android:orientation="horizontal"
        android:background="@drawable/bg_shape_rect">
        <EditText
            android:id="@+id/et_number"
            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_marginLeft="@dimen/x30"
            android:hint="请输入验证码"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:maxLength="18"
            android:background="@null"
            tools:text="55555555555555555555555555555"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x20"
            android:src="@drawable/icon_delete"/>
    </LinearLayout>
    <include layout="@layout/include_keybord"/>

</LinearLayout>