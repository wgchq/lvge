<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:fitsSystemWindows="true"
              android:orientation="vertical"

              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/colorPrimary"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/x20"
                    android:paddingRight="@dimen/x20"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginLeft="45dp">
                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="和平"/>
                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            tools:text="1234544777"/>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="收货地址：重庆市人民路"/>
                    <lvge.com.myapp.view.GoodsDesView
                        android:layout_marginTop="@dimen/x10"
                        android:id="@+id/goodsDesView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="付款金额"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:textColor="@color/colorPrimary"
                            tools:text="￥2680"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            style="@style/orderDetailLinear">
                            <TextView
                                style="@style/orderDetailLeftText"
                                android:text="订单号"/>
                            <TextView
                                android:id="@+id/tv_order_number"
                                style="@style/orderDetailRightText"
                                tools:text="1878454545433454"/>
                        </LinearLayout>
                        <LinearLayout
                            style="@style/orderDetailLinear">
                            <TextView
                                style="@style/orderDetailLeftText"
                                android:text="下单时间"/>
                            <TextView
                                android:id="@+id/tv_order_time"
                                style="@style/orderDetailRightText"
                                tools:text="2017-6-12 13：12：12"/>
                        </LinearLayout>
                        <LinearLayout
                            style="@style/orderDetailLinear">
                            <TextView
                                style="@style/orderDetailLeftText"
                                android:text="安装车型"/>
                            <TextView
                                android:id="@+id/tv_install_type"
                                style="@style/orderDetailRightText"
                                tools:text="奥迪"/>
                        </LinearLayout>
                        <LinearLayout
                            style="@style/orderDetailLinear">
                            <TextView
                                style="@style/orderDetailLeftText"
                                android:text="备注"/>
                            <TextView
                                android:id="@+id/tv_remark"
                                style="@style/orderDetailRightText"
                                tools:text="无"/>
                        </LinearLayout>
                        <LinearLayout
                            style="@style/orderDetailLinear">
                            <TextView
                                style="@style/orderDetailLeftText"
                                android:text="开票信息"/>
                            <TextView
                                android:id="@+id/tv_bill_info"
                                style="@style/orderDetailRightText"
                                tools:text="xxx公司"/>
                        </LinearLayout>
                        <LinearLayout
                            style="@style/orderDetailLinear">
                            <TextView
                                style="@style/orderDetailLeftText"
                                android:text="当前状态"/>
                            <TextView
                                android:id="@+id/tv_status"
                                style="@style/orderDetailRightText"
                                tools:text="待发货"/>
                        </LinearLayout>
                        <LinearLayout
                            style="@style/orderDetailLinear">
                            <TextView
                                style="@style/orderDetailLeftText"
                                android:text="支付方式"/>
                            <TextView
                                android:id="@+id/tv_pay_way"
                                style="@style/orderDetailRightText"
                                tools:text="微信"/>
                        </LinearLayout>



                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <lvge.com.myapp.view.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/x20"
                tools:src="@mipmap/phone"/>
        </FrameLayout>
    </ScrollView>
</LinearLayout>