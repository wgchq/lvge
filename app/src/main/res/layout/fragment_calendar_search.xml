<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lvge.com.myapp.modules.validationhistory.CalendarSearchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_background_gray"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x70"
            android:gravity="center"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/mainBackgroundColor"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/validation_search_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/x36" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年"
                android:textSize="@dimen/x36" />


            <TextView
                android:id="@+id/validation_search_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06"
                android:textColor="@color/colorPrimary"

                android:textSize="@dimen/x36" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月"
                android:textSize="@dimen/x36" />

            <TextView
                android:id="@+id/validation_search_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07"
                android:textColor="@color/colorPrimary"

                android:textSize="@dimen/x36" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日"
                android:textSize="@dimen/x36" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"
            android:layout_marginBottom="@dimen/x28"
            android:layout_marginTop="@dimen/x28"
            android:background="@color/mainBackgroundColor"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x80"
                android:layout_marginLeft="@dimen/x36"
                android:drawableLeft="@mipmap/history_validation_count"
                android:drawablePadding="@dimen/x14"
                android:gravity="center"
                android:text="总共验证"
                android:textColor="#000"
                android:textSize="@dimen/x28" />

            <TextView
                android:id="@+id/record_cal_total_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/x28" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单"
                android:textColor="#000"
                android:textSize="@dimen/x28" />
        </LinearLayout>
        <!-- TODO: Update blank fragment layout -->
        <lvge.com.myapp.ui.LoadListView
            android:id="@+id/history_validation_calendar_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/line_background_gray"
            android:dividerHeight="@dimen/x14">

        </lvge.com.myapp.ui.LoadListView>
    </LinearLayout>


</FrameLayout>
