<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="lvge.com.myapp.modules.commodity_management.CommodityNewgoodsGiftAdd"
    tools:showIn="@layout/activity_commodity_newgoods_gift_add"
    android:orientation="vertical">

    <EditText
        android:id="@+id/commodity_newgoods_addgift"
        style="@style/system_hint_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x98"
        android:background="@drawable/edit_text_shape"
        android:hint="请输入赠品名称"
        android:inputType="text"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_gray"
        android:paddingLeft="@dimen/x15"
        android:paddingTop="@dimen/x15"
        tools:ignore="RtlHardcoded,RtlSymmetry">

        <ImageView
            android:id="@+id/commodity_newgoods_giftFigure"
            android:layout_width="@dimen/x140"
            android:layout_height="@dimen/x140"
            android:layout_margin="@dimen/x10"
            android:contentDescription=""
            android:onClick="show"
            android:src="@mipmap/commodity_newgoods_mainimage"
            tools:ignore="ContentDescription,RtlHardcoded,RtlSymmetry">

        </ImageView>

    </LinearLayout>

    <EditText
        android:id="@+id/commodity_newgoods_description"
        style="@style/system_hint_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x200"
        android:background="@android:drawable/edit_text"
        android:hint="请输入赠品描述"
        android:inputType="text"
        tools:ignore="HardcodedText" />

</LinearLayout>

