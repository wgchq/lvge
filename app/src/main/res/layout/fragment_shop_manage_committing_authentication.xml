            android:layout_marginTop="@dimen/x60"
            android:textColor="#333"
            android:textSize="@dimen/x28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/authentication_is_committing" />

    </LinearLayout>

