<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PageBackgroundColor"
    tools:context="lvge.com.myapp.modules.shop_management.NotAuthenticationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/fragment_container_authentication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@color/mainBackgroundColor">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:text="@string/company_name_text" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_shape"
                    android:hint="@string/please_enter_company_name_text"
                    android:padding="@dimen/text_left_padding"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/mainBackgroundColor"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:text="@string/shop_authentication_business_licence"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_business_licence"
                    android:layout_width="@dimen/img_size"
                    android:layout_height="@dimen/img_size"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:background="@drawable/image_style_shape" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/mainBackgroundColor"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:text="@string/shop_authentication_identity_card"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_identity_card_positive"
                        android:layout_width="@dimen/img_size"
                        android:layout_height="@dimen/img_size"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:background="@drawable/image_style_shape"
                        android:onClick="show" />

                    <ImageView
                        android:id="@+id/img_identity_card_negative"
                        android:layout_width="@dimen/img_size"
                        android:layout_height="@dimen/img_size"
                        android:layout_margin="@dimen/activity_horizontal_margin"

                        android:background="@drawable/image_style_shape"
                        android:onClick="show" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:orientation="vertical">

                    <Button
                        style="@style/my_buttonActiveStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/confirm_and_submit" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        android:hint="@string/confirm_and_submit_hint" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
