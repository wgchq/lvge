<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical"
    tools:context="lvge.com.myapp.modules.shop_management.HasCommitAuthenticationFragment">
    <!--网络监测-->
    <lvge.com.myapp.ui.NetworkCheckView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x18">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x460"
        android:background="@color/mainBackgroundColor"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:layout_marginTop="@dimen/x68"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/shop_manage_commit_success"
            android:layout_gravity="center"/>
        <TextView
            android:layout_marginTop="@dimen/x22"
            android:textSize="@dimen/x36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000"
            android:gravity="center"
            android:text="@string/authentication_submit_success"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="@dimen/x62"
            android:layout_marginLeft="@dimen/x56"
            android:textSize="@dimen/x28"
            android:textColor="#888"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/authentication_submit_success_description" />

    </LinearLayout>

    <!--<Button-->
        <!--android:id="@+id/btn_authentication_complete"-->
        <!--android:layout_margin="@dimen/activity_horizontal_margin"-->
        <!--style="@style/my_buttonActiveStyle"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/authentication_complete"/>-->
</LinearLayout>
