<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="lvge.com.myapp.ForgetPasswordActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_forget_password"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:navigationIcon="@mipmap/ic_back"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextColor="@color/mainFontColor">

            <TextView
                style="@style/system_title_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="@string/toolbar_title_forget_password" />
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/x50"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/validation_code_has_send_to"
            android:textColor="#c0c3c5"
            android:textSize="@dimen/x28"
            android:typeface="sans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x28"
            android:text="@string/validation_code_has_send_to_phone_no"
            android:textColor="#000000"
            android:textSize="@dimen/x32"
            android:typeface="sans" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x40">

            <EditText
                android:layout_width="@dimen/x468"
                android:layout_height="@dimen/x88"
                android:layout_marginLeft="@dimen/x20"
                android:hint="@string/please_enter_validation"
                android:textColorHint="@color/hint_color"
                android:background="@drawable/edit_text_has_corner_shape"
                android:textCursorDrawable="@drawable/text_cursor_drawable"
                android:textSize="@dimen/x32" />

            <Button
                android:background="@drawable/button_style_has_corner_shape"
                android:layout_width="@dimen/x212"
                android:layout_height="@dimen/x88"
                android:layout_marginLeft="@dimen/x42"
                android:textColor="@color/mainFontColor"
                android:text="23s后重新发送"
                android:textSize="@dimen/x24" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
