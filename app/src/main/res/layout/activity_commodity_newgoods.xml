                            android:inputType="text"
                            android:paddingLeft="@dimen/x50"
                            android:textSize="@dimen/x28"
                            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x80"
                        android:background="@drawable/edit_text_shape"
                        tools:ignore="UselessParent">

                        <TextView
                            android:id="@+id/commodity_newgoods_textview3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x15"
                            android:text="商品优惠"
                            android:textSize="@dimen/x30"
                            tools:ignore="HardcodedText,RtlHardcoded" />

                        <EditText
                            android:id="@+id/commodity_newgoods_commodityDiscount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/commodity_newgoods_textview3"
                            android:background="@drawable/edit_text_shape"
                            android:hint="立减200元"
                            android:inputType="text"
                            android:paddingLeft="@dimen/x50"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="@dimen/x28"
                            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/commodity_newgoods_Relayout_inventory"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x80"
                        android:background="@drawable/edit_text_shape"
                        tools:ignore="UselessParent">

                        <TextView
                            android:id="@+id/commodity_newgoods_textview4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x15"
                            android:text="商品库存"
                            android:textSize="@dimen/x30"
                            tools:ignore="HardcodedText,RtlHardcoded" />

                        <EditText
                            android:id="@+id/commodity_newgoods_commodityStock"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/commodity_newgoods_textview4"
                            android:background="@drawable/edit_text_shape"
                            android:hint="请输入商品库存数量"
                            android:inputType="text"
                            android:paddingLeft="@dimen/x50"
                            android:textSize="@dimen/x28"
                            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/commodity_newgoods_Relayout_installation"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x80"
                        android:background="@drawable/edit_text_shape"
                        tools:ignore="UselessParent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x15"
                            android:text="门店安装"
                            android:textSize="@dimen/x30"
                            tools:ignore="HardcodedText,RtlHardcoded" />

                        <TextView
                            android:id="@+id/commodity_newgoods_install"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:drawablePadding="@dimen/x15"
                            android:drawableRight="@mipmap/gray_right"
                            android:paddingRight="@dimen/x15"
                            android:text="支持门店安装"
                            android:textSize="@dimen/x28"
                            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry,SmallSp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/commodity_newgoods_Relayout_royalty"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x80"
                        android:background="@drawable/edit_text_shape"
                        tools:ignore="UselessParent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x15"
                            android:text="安装提成"
                            android:textSize="@dimen/x30"
                            tools:ignore="HardcodedText,RtlHardcoded" />

                        <TextView
                            android:id="@+id/commodity_cultivar_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/commodity_newgoods_textviewInstall"
                            android:text="导航安装提成"
                            android:textSize="15sp"
                            tools:ignore="HardcodedText,RtlHardcoded,SmallSp" />

                        <TextView
                            android:id="@+id/commodity_newgoods_textviewInstall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:drawablePadding="@dimen/x15"
                            android:drawableRight="@mipmap/gray_right"
                            android:paddingRight="@dimen/x15"
                            android:text="￥165.00"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/x28"
                            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry,SmallSp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x44"
                        android:background="#EFEFF4"
                        tools:ignore="InefficientWeight" />

                    <RelativeLayout
                        android:id="@+id/commodity_nowgoods_Relayout_parameter"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x80"
                        android:background="@drawable/edit_text_shape"
                        tools:ignore="UselessParent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x15"
                            android:text="添加商品参数"
                            android:textSize="@dimen/x30"
                            tools:ignore="HardcodedText,RtlHardcoded" />

                        <ImageView
                            android:id="@+id/commodity_newgoods_CommodityParameter"
                            android:layout_width="@dimen/x50"
                            android:layout_height="@dimen/x50"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:drawablePadding="@dimen/x15"
                            android:paddingRight="@dimen/x15"
                            android:src="@mipmap/menu_dropdown"
                            tools:ignore="ContentDescription,HardcodedText,RelativeOverlap,RtlHardcoded,RtlSymmetry,SmallSp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/commodity_newgoods_Relayout_brand"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x80"
                        android:background="@drawable/edit_text_shape"
                        tools:ignore="UselessParent">

                        <TextView
                            android:id="@+id/commodity_newgoods_textview5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x15"
                            android:text="品牌"
                            android:textSize="@dimen/x30"
                            tools:ignore="HardcodedText,RtlHardcoded" />

                        <EditText
                            android:id="@+id/commodity_newgoods_commodityBrand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/commodity_newgoods_textview5"
                            android:background="@drawable/edit_text_shape"
                            android:hint="请输入商品的品牌"
                            android:inputType="text"
                            android:paddingLeft="@dimen/x30"
                            android:textSize="@dimen/x28"
                            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/commodity_newgoods_Relayout_specification"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x80"
                        android:background="@drawable/edit_text_shape"
                        tools:ignore="UselessParent">

                        <TextView
                            android:id="@+id/commodity_newgoods_textview6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x15"
                            android:text="规格"
                            android:textSize="@dimen/x30"
                            tools:ignore="HardcodedText,RtlHardcoded" />

                        <EditText
                            android:id="@+id/commodity_newgoods_commodity_specification"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/commodity_newgoods_textview6"
                            android:background="@drawable/edit_text_shape"
                            android:hint="请输入商品的规格"
                            android:inputType="text"
                            android:paddingLeft="@dimen/x30"
                            android:textSize="@dimen/x28"
                            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/commodity_newgoods_Relayout_commodityAddress"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x80"
                        android:background="@drawable/edit_text_shape"
                        tools:ignore="UselessParent">

                        <TextView
                            android:id="@+id/commodity_newgoods_textview7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x15"
                            android:text="产地"
                            android:textSize="@dimen/x30"
                            tools:ignore="HardcodedText,RtlHardcoded" />

                        <EditText
                            android:id="@+id/commodity_newgoods_commodityAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/commodity_newgoods_textview7"
                            android:background="@drawable/edit_text_shape"
                            android:hint="请输入商品的产地"
                            android:inputType="text"
                            android:paddingLeft="@dimen/x30"
                            android:textSize="@dimen/x28"
                            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/commodity_newgoods_Relayout_cartype"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x80"
                        android:background="@drawable/edit_text_shape"
                        tools:ignore="UselessParent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x15"
                            android:text="安装车型"
                            android:textSize="@dimen/x30"
                            tools:ignore="HardcodedText,RtlHardcoded" />

                        <TextView
                            android:id="@+id/commodity_newgoods_cartype_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:drawablePadding="@dimen/x15"
                            android:drawableRight="@mipmap/gray_right"
                            android:paddingRight="@dimen/x15"
                            android:text="未设置车型"
                            android:textSize="@dimen/x28"
                            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry,SmallSp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x44"
                        android:background="#EFEFF4"
                        tools:ignore="InefficientWeight" />

                    <RelativeLayout
                        android:id="@+id/commodity_newgoods_Realyout_question"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x80"
                        android:background="@drawable/edit_text_shape"
                        tools:ignore="UselessParent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x15"
                            android:text="常见问题"
                            android:textSize="@dimen/x30"
                            tools:ignore="HardcodedText,RtlHardcoded" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:drawablePadding="@dimen/x15"
                            android:drawableRight="@mipmap/gray_right"
                            android:paddingRight="@dimen/x15"
                            android:textSize="@dimen/x28"
                            tools:ignore="HardcodedText,RelativeOverlap,RtlHardcoded,RtlSymmetry,SmallSp" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/commodity_goodnews_Relayout_description"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x80"
                        android:background="@drawable/edit_text_shape"
                        tools:ignore="UselessParent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x15"
                            android:text="商品图文描述"
                            android:textSize="@dimen/x30"
                            tools:ignore="HardcodedText,RtlHardcoded" />

                        <TextView
                            android:id="@+id/commodity_goodnews_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:drawablePadding="@dimen/x15"
                            android:drawableRight="@mipmap/gray_right"
