<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context="lvge.com.myapp.modules.commodity_management.CommodityNewgoods"
    tools:ignore="GradleDependency">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        style="@style/my_title_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme"
        app:elevation="0dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_commodity_management_list"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:navigationIcon="@mipmap/ic_back"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextColor="@color/mainFontColor">

            <TextView
                style="@style/system_title_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="新增商品"
                tools:ignore="HardcodedText" />
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <!--网络监测-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/commodity_newgoods_Bottomtoolsbar"
            android:isScrollContainer="false"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:weightSum="1"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/fragment_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/commodity_newgoods_toolsbar"
                    android:orientation="vertical"
                    android:weightSum="1"
                    tools:ignore="ObsoleteLayoutParam">


                    <EditText
                        android:id="@+id/commodity_newgoods_commodityname"
                        style="@style/system_hint_style"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x98"
                        android:background="@drawable/edit_text_shape"
                        android:hint="请输入商品名称"
                        android:inputType="text"
                        tools:ignore="HardcodedText" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x240"
                        android:background="@color/background_gray"
                        android:orientation="vertical"
                        tools:ignore="UselessLeaf">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/background_gray"
                            android:paddingLeft="@dimen/x15"
                            android:paddingTop="@dimen/x15"
                            tools:ignore="RtlHardcoded,RtlSymmetry">

                            <ImageView
                                android:id="@+id/commodity_newgoods_mainFigure"
                                android:layout_width="@dimen/x140"
                                android:layout_height="@dimen/x140"
                                android:layout_margin="@dimen/x10"
                                android:contentDescription=""
                                android:onClick="show"
                                android:src="@mipmap/commodity_newgoods_mainimage"
                                tools:ignore="ContentDescription,RtlHardcoded,RtlSymmetry"></ImageView>

                            <View
                                android:layout_width="@dimen/x15"
                                android:layout_height="match_parent" />

                            <ImageView
                                android:id="@+id/commodity_newgoods_Figure1"
                                android:layout_width="@dimen/x140"
                                android:layout_height="@dimen/x140"
                                android:layout_margin="@dimen/x10"
                                android:onClick="show"
                                android:src="@mipmap/commodity_newgoods_addimage"
                                tools:ignore="ContentDescription">

                            </ImageView>

                            <View
                                android:layout_width="@dimen/x15"
                                android:layout_height="match_parent" />

                            <ImageView
                                android:id="@+id/commodity_newgoods_Figure2"
                                android:layout_width="@dimen/x140"
                                android:layout_height="@dimen/x140"
                                android:layout_margin="@dimen/x10"
                                android:onClick="show"
                                android:src="@mipmap/commodity_newgoods_addimage"
                                tools:ignore="ContentDescription">

                            </ImageView>

                            <View
                                android:layout_width="@dimen/x15"
                                android:layout_height="match_parent" />

                            <ImageView
                                android:id="@+id/commodity_newgoods_Figure3"
                                android:layout_width="@dimen/x140"
                                android:layout_height="@dimen/x140"
                                android:layout_margin="@dimen/x10"
                                android:contentDescription=""
                                android:onClick="show"
                                android:src="@mipmap/commodity_newgoods_addimage"
                                tools:ignore="ContentDescription"></ImageView>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/x20"
                            android:paddingTop="@dimen/x15"
                            android:text="精美商品封面让商品脱颖而出，长按图片可拖曳调整顺序。"
                            android:textSize="@dimen/x24"
                            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/commodity_newgoods_relayout_type"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x80"
                        android:background="@drawable/edit_text_shape"
                        tools:ignore="UselessParent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="商品类型"
                            android:textSize="@dimen/x30"
                            tools:ignore="HardcodedText,RtlHardcoded" />

                        <TextView
                            android:id="@+id/commodity_newgoods_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:drawablePadding="@dimen/x15"
                            android:drawableRight="@mipmap/gray_right"
                            android:paddingRight="@dimen/x15"
                            android:text="实物商品"
                            android:textSize="@dimen/x28"
                            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry,SmallSp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x44"
                        android:background="#EFEFF4"
                        tools:ignore="InefficientWeight" />

                    <RelativeLayout
                        android:id="@+id/commodity_newgoods_Relayout_typechoose"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x80"
                        android:background="@drawable/edit_text_shape"
                        tools:ignore="UselessParent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x15"
                            android:text="品种"
                            android:textSize="@dimen/x30"
                            tools:ignore="HardcodedText,RtlHardcoded" />

                        <TextView
                            android:id="@+id/commodity_newgoods_cultivartypechoose"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:drawablePadding="@dimen/x15"
                            android:drawableRight="@mipmap/gray_right"
                            android:paddingRight="@dimen/x15"
                            android:text="未选择品种"
                            android:textSize="@dimen/x28"
                            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry,SmallSp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x80"
                        android:background="@drawable/edit_text_shape"
                        tools:ignore="UselessParent">

                        <TextView
                            android:id="@+id/commodity_newgoods_textview1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x15"
                            android:text="商品原价"
                            android:textSize="@dimen/x30"
                            tools:ignore="HardcodedText,RtlHardcoded" />

                        <EditText
                            android:id="@+id/commodity_newgoods_commodityOriginalprice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/commodity_newgoods_textview1"
                            android:background="@drawable/edit_text_shape"
                            android:hint="请输入商品原来的价格"
                            android:inputType="text"
                            android:paddingLeft="@dimen/x50"
                            android:textSize="@dimen/x28"
                            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x80"
                        android:background="@drawable/edit_text_shape"
                        tools:ignore="UselessParent">

                        <TextView
                            android:id="@+id/commodity_newgoods_textview2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x15"
                            android:text="销售价格"
                            android:textSize="@dimen/x30"
                            tools:ignore="HardcodedText,RtlHardcoded" />

                        <EditText
                            android:id="@+id/commodity_newgoods_commoditySellingprice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/commodity_newgoods_textview2"
                            android:background="@drawable/edit_text_shape"
