                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/commodity_newgoods_toolsbar"
                android:orientation="vertical"
                android:weightSum="1"
                tools:ignore="ObsoleteLayoutParam">

