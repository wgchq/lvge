<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_menu_selector"
    android:gravity="center_vertical"
    android:paddingEnd="@dimen/x12"
    android:paddingStart="@dimen/x12">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@string/menu_print_setting"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

        <TextView
        android:id="@+id/menu_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/x34"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:textSize="@dimen/x32"
        android:text="@string/menu_authority"
        android:textColor="@color/mainFontColor"
        tools:ignore="RelativeOverlap,RtlHardcoded,RtlSymmetry" />

        <ImageView
            android:id="@+id/menu_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/menu_print_setting"
            android:layout_centerVertical="true"
            tools:ignore="ObsoleteLayoutParam,RtlHardcoded" />
    </RelativeLayout>

</LinearLayout>