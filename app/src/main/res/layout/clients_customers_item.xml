<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/toolbar_main_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/x22"
        android:layout_marginBottom="@dimen/x22"
        android:layout_marginRight="@dimen/x22"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x22"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sale_consultant_iamage"
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/x100"
                android:background="@drawable/client_img_shape"
                android:src="@mipmap/menu_logo"
                tools:ignore="ContentDescription,InefficientWeight,NestedWeights" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="NestedWeights">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/customer_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12312312312"
                        android:textSize="@dimen/x28"
                        tools:ignore="HardcodedText,RtlHardcoded" />

                    <TextView
                        android:id="@+id/customer_listview_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x12"
                        android:layout_toLeftOf="@+id/client_kilometer"
                        android:drawableLeft="@mipmap/client_kilometer"
                        android:drawablePadding="@dimen/x12"
                        android:text="88888"
                        android:textColor="#ff8f92" />

                    <TextView
                        android:id="@+id/client_kilometer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/kilometer" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x28"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/customer_car_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/dazhong"
                    android:drawablePadding="@dimen/x14"
                    android:gravity="center_vertical"
                    android:text="11"
                    android:textColor="#333"
                    android:textSize="@dimen/x26" />

                <TextView
                    android:id="@+id/customer_listview_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="111"
                    tools:ignore="ContentDescription,HardcodedText,RelativeOverlap,RtlHardcoded" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>