<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:fitsSystemWindows="true"
              android:orientation="vertical"

              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/include_common_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_gray"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x61"
                    android:background="@color/colorPrimary"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:paddingLeft="@dimen/x20"
                    android:paddingRight="@dimen/x20"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x150"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/x120"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/x36"
                                android:layout_marginLeft="@dimen/x142"
                                tools:text="和平"/>
                            <TextView
                                android:id="@+id/tv_phone"
                                android:layout_marginTop="@dimen/x30"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:textSize="@dimen/x28"
                                tools:text="1234544777"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/shop_manage_authentication_fail"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="扫码验证"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="收货地址：重庆市人民路"/>
                    <lvge.com.myapp.view.GoodsDesView
                        android:layout_marginTop="@dimen/x10"
                        android:id="@+id/goodsDesView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <include layout="@layout/include_middle_line"/>
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            style="@style/orderDetailLinear">

                            <TextView
                                style="@style/orderDetailLeftText"
                                android:text="备注："/>

                            <TextView
                                android:id="@+id/tv_memo"
                                style="@style/orderDetailRightText"
                                tools:text="1878454545433454"/>
                        </LinearLayout>

                        <LinearLayout
                            style="@style/orderDetailLinear">

                            <TextView
                                style="@style/orderDetailLeftText"
                                android:text="订单号:"/>

                            <TextView
                                android:id="@+id/tv_order_no"
                                style="@style/orderDetailRightText"
                                tools:text="2017-6-12 13：12：12"/>
                        </LinearLayout>

                        <LinearLayout
                            style="@style/orderDetailLinear">

                            <TextView
                                style="@style/orderDetailLeftText"
                                android:text="下单时间："/>

                            <TextView
                                android:id="@+id/tv_date"
                                style="@style/orderDetailRightText"
                                tools:text="2017-06-19 18:90"/>
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x100"
                    android:layout_marginTop="@dimen/x30"
                    android:layout_marginLeft="@dimen/x25"
                    android:layout_marginRight="@dimen/x25"
                    android:background="@color/colorPrimary"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/x40"
                    android:text="发货"/>

            </LinearLayout>

            <lvge.com.myapp.view.CircleImageView
                android:layout_width="@dimen/x122"
                android:layout_height="@dimen/x122"
                android:layout_marginLeft="@dimen/x20"
                tools:src="@mipmap/phone"/>
        </FrameLayout>
    </ScrollView>
</LinearLayout>